<div class="d-flex align-items-center">
  <h1>報告書一覧</h1>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>タイトル</th>
      <th>チーム名</th>
      <th>ステータス</th>
      <th>提出〆切</th>
      <th>ラベル</th>
      <th></th>
      <th></th>
      <th></th>
   </tr>
 </thead>
 <tbody>
   <% @reports.each do |report| %>
     <tr>
       <td id=<%= "report-index__report-#{report.id}-name" %> ><%= report.title %></td>
       <td id=<%= "report-index__report-#{report.id}-email" %> ><%= report.title %></td>
       <td id=<%= "report-index__report-#{report.id}-created_at" %> ><%= report.created_at.strftime("%Y年 %m月 %d日 %H:%M:%S") %></td>
       <td><%= link_to '詳細', report_path(report.id), class: 'btn btn-primary mr-3', id: "report-index_detail-#{report.id}-submit" %></td>
       <% if user == current_user %>
       <td><%= link_to '編集', edit_report_path(report.id), class: 'btn btn-success mr-3', id: "report_index_edit-#{report.id}-submit" %></td>
       <td><%= link_to '削除', report_path(report.id), method: :delete, data: { confirm: "ユーザー「#{report.name}を削除します。よろしいでしょうか？」" }, class: 'btn btn-danger mr-3', id: "report_index_delete-#{report.id}-submit" %></td>
       <% end %>
     </tr>
   <% end %>
 </tbody>
</table>
