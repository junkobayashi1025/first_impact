<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        報告書作成画面
      </div>
      <div class="card-body">
        <%= form_with model: @report, local: true, class: "upload-images p-0 border-0" do |f| %>
           <div class="float_right">
            <div class="form-group">
              <%= f.label :作成日 %>
              <div class="form-control">
                <%= Date.current.strftime("%Y年 %m月 %d日") %>
              </div>
            </div>
            <div class="form-group none_function">
              <%= f.label :担当者 %>
   　　　　　　<%= f.text_field :author, class: 'form-control' %>
            </div>
           </div>
           <div class="form-group clear col-md-6">
             <%= f.label :タイトル %>
             <%= f.text_field :title, class: 'form-control' %>
           </div>
           <u>1.発生状況</u>
           <div class="form-group clear col-md-6">
             <%= f.label :発生日 %>
  　　　　　　<%= f.date_field :accrual_date, class: 'form-control' %>
           </div>
           <div class="form-group clear col-md-6">
             <%= f.label :発生場所 %>
  　　　　　　<%= f.text_field :site_of_occurrence, class: 'form-control' %>
           </div>
           <div class="form-group clear">
             <u>2-1.トラブル内容</u>
  　　　　　　<%= f.text_area :trouble_content, class: 'form-control', rows:10 %>
           </div>
           <div class="form-group">
             <u>2-2.応急対応</u>
  　　　　　　<%= f.text_area :first_aid, class: 'form-control', rows:10 %>
           </div>
           <div class="form-group">
             <u>2-3.暫定対策</u>
  　　　　　　<%= f.text_area :interim_measures, class: 'form-control', rows:10%>
           </div>
           <div class="form-group none_function">
             <u>3.恒久対策</u>
  　　　　　　<%= f.text_area :permanent_measures, class: 'form-control', rows:10 %>
           </div>
           <div class="form-group none_function">
             <u>4.有効性の確認</u>
　　　　　　  <%= f.text_area :confirmation_of_effectiveness, class: 'form-control', rows:10 %>
           </div>
           <div class ="mb-3">
              <%= f.fields_for :attachments do |i| %>
                <%= i.file_field :image %>
              <!-- <%= i.hidden_field :contents_cache, multiple: true %> -->
              <% end %>
            </div>
            <bi>
            <%= f.hidden_field :team_id, value: @team.id %>
            <%= f.submit "新規作成", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
