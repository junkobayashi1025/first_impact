<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        報告書詳細画面
      </div>
      <div class="card-body">
        <div class="float_right col-md-4">
          <div class="form-control">
            <%= "作成日：#{@report.created_date.strftime("%Y年 %m月 %d日")}" %>
          </div><br>
          <div class="form-control">
            <%= "担当者：#{@report.author}" %>
          </div>
        </div>
        <strong>タイトル</strong>
        <div class="form-control clear col-md-6">
          <%= @report.title %>
        </div><br>
           <u>1.発生状況</u>
           <div class="form-control col-md-4">
             <%= "発生日：#{@report.accrual_date.strftime("%Y年 %m月 %d日")}" %>
           </div><br>
           <div class="form-control col-md-4">
             <%= "発生場所：#{@report.site_of_occurrence}" %>
           </div><br>
           <u>2.トラブル内容</u>
           <%= "(提出〆切：#{(@report.accrual_date + 7.day).strftime("%Y年 %m月 %d日")})"%>
           <%= check_box = checkbox_first %>
           <div class="form-control">
             <%= @report.trouble_content %>
           </div><br>
           <u>3.応急対応</u>
           <div class="form-control">
             <%= @report.first_aid %>
           </div><br>
           <u>4.暫定対策</u>
           <div class="form-control">
             <%= @report.interim_measures %>
           </div><br>
           <u>5.恒久対策</u>
           <div class="form-control">
             <%= @report.permanent_measures %>
           </div><br>
           <u>6.有効性の確認</u>
           <div class="form-control">
             <%= @report.confirmation_of_effectiveness %>
           </div><br>
          <bi>
      </div>
    </div>
  </div>
</div>
