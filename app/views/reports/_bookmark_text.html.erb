<strong>
  <% bookmarks.each.with_index do |bookmark, index| %>
    <% if bookmarks.size == 1 %>
      <%= bookmark.user.name %> </strong> が「いいね！」しました
    <% elsif bookmark == bookmarks.last %>
      </strong>and<strong>
      <%= + bookmark.user.name %></strong> が「いいね！」しました
    <% elsif index > 1 %>
      </strong><%= "and " + (bookmarks.size-index).to_s + " 他 " %> が「いいね！」しました
      <% break %>
    <% elsif index == bookmarks.size-2 || index == 1 %>
      <%= bookmark.user.name %>
    <% else %>
      <%= bookmark.user.name + ", " %>
    <% end %>
  <% end %>
</strong>
