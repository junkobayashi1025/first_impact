<div class ="container">
  <div class="d-flex align-items-center">
    <h1>ユーザー一覧</h1>
  </div>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>登録日時</th>
        <th></th>
        <th></th>
        <th></th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td id=<%= "user-index__user-#{user.id}-name" %> ><%= link_to "#{user.name}", user_path(user.id), id: "user-index_detail-#{user.id}-submit" %></td>
         <td id=<%= "user-index__user-#{user.id}-email" %> ><%= user.email %></td>
         <td id=<%= "user-index__user-#{user.id}-created_at" %> ><%= user.created_at.strftime("%Y年 %m月 %d日 %H:%M:%S") %></td>
         <% if user == current_user %>
         <td><%= link_to '編集', edit_user_path(user.id), class: 'btn btn-success mr-3', id: "user_index_edit-#{user.id}-submit" %></td>
         <td><%= link_to '削除', user_path(user.id), method: :delete, data: { confirm: "ユーザー「#{user.name}を削除します。よろしいでしょうか？」" }, class: 'btn btn-danger mr-3', id: "user_index_delete-#{user.id}-submit" %></td>
         <% end %>
       </tr>
     <% end %>
   </tbody>
  </table>
</div>
