<div class="panel panel-default">
  <div class="panel-heading float_left">
    ※チーム内で依頼中の報告書
  </div>
  <% if team.request_report.any? == true %>
    <table class="table panel-body">
      <tr>
        <th>タイトル</th>
        <th>担当者</th>
        <th>ステップ</th>
        <th>提出〆切</th>
      </tr>
      <% team.request_report.each do |report| %>
        <tr>
          <td><%= link_to "#{report.title}", report_path(report.id) %></td>
          <td><%= link_to "#{report.author}", user_path(report.user.id) %></td>
          <td><%= report.step %></td>
          <% if report.confirmed_date.present? %>
            <td><%= report.due.strftime("%Y年 %m月 %d日") %></td>
          <% else %>
            <td>未定</td>
          <% end %>
        </tr>
        <% end %>
      </table>
    <% else %>
      <strong>該当する報告書はありません</strong>
    <% end %>
  </div>
