  <% if @team.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= @team.errors.count %>件のエラーがあります。</h4>
      <ul>
        <% @team.errors.full_messages.each do|msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-4">
  <%= form_with(model: @team, local: true) do |f| %>
    <div class="form-group profile">
      <div class="box-name">
        <%= f.label :name, "チーム名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="box-remark">
        <%= f.label :remark, "備考" %><br />
        <%= f.text_area :remark, autofocus: true, autocomplete: "remark", id: :textarea %>
      </div>
      <div class="image-field text-center">
        <h5>チーム画像</h5>
        <% if @team.icon.present? %>
        <%= image_tag @team.icon.url, id: :img_prev %>
        <% else %>
        <%= image_tag "default.png", id: :img_prev %>
        <% end %>
        <%= f.file_field :icon, id: :team_img %>
      </div>
     </div>
     <%= f.submit '作成', value:'作成', class: 'btn btn-primary', id: 'create_team_submit' %>
   <% end %>
